                <p><b> <span class="bold-text">Important Information:</span></b></p>
                
                <apex:outputPanel layout="block" rendered="{!status=='Paid'}">
                    <p><b> <span class="bold-text">Payment:</span></b> Thank you for your order.</p>
                </apex:outputPanel>
                
